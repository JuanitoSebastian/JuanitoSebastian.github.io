---
import BgLine from '../components/BgLine.astro';
import Header from '../components/Header.astro';
---

<style>
  .layout {
    display: flex;
    margin: 0 auto;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    .main-content {
      width: 100%;
      max-width: var(--main-width);
    }
  }
</style>

<div class="layout">
  <BgLine />
  <Header />
  <main class="main-content">
    <slot />
  </main>
</div>
