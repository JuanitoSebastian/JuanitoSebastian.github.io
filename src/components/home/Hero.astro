---
import Polaroid from './Polaroid.astro';
---

<style>
  .hero {
    width: 100%;
    display: flex;
    flex-flow: column nowrap;
    justify-content: flex-end;
    margin: 0 0 var(--xxl-spacing);
    overflow-y: hidden;

    .title {
      margin: var(--default-spacing) 0 0;
      padding: 0 0 var(--default-spacing);
      text-align: right;
      color: var(--secondary-text-color);
      font-family: var(--roboto-condensed);
      font-size: 20px;
      line-height: 1.2;
      align-self: flex-end;

      .main {
        color: var(--text-color);
        font-size: 32px;
      }

      > * {
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        box-shadow: 0px 0px 10px var(--bg-color);
      }
    }

    @media (min-width: 400px) {
      .title {
        font-size: 24px;
      
    }
  }
</style>

<section class="hero">
  <Polaroid />
  <p class="title">
    <strong class="main">Web Developer</strong><br />
    <span>Bachelor of Computer Science</span><br />
    <span>Former Technical Event Production Pro</span>
  </p>
</section>
