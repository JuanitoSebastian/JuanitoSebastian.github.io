---
import type { Frontmatter } from "../../utils/Types";

export interface Props {
    frontmatter: Frontmatter;
    url: string | undefined;
}
const { frontmatter, url } = Astro.props;
---

<div class="basis-1/3">
    <a href={url}>
        <div
            class="flex flex-col bg-white h-80 rounded-xl border-2 border-gray-400 overflow-hidden hover:border-black hover:cursor-pointer transition"
        >
            <div
                class="h-28 bg-j-light-lilac border-b border-1 border-gray-400"
            >
            </div>
            <div class="flex flex-col gap-2 p-4 w-full">
                <h3>{frontmatter.title}</h3>
                <p class="line-clamp-4">{frontmatter.description}</p>
            </div>
        </div>
    </a>
</div>
