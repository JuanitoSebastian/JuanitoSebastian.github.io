---
import SkillLabel from "./SkillLabel.astro";
import { Content as AboutMeJuanText } from "./AboutMeJuan.md";
import { Content as AboutMeAppsText } from "./AboutMeApps.md";
import { Image } from "@astrojs/image/components";
---

<div class="w-full about text-white scroll-mt-16" id="about-me">
    <div class="container mx-auto max-w-6xl py-24 px-4">
        <div class="flex flex-col gap-8">
            <h2>This is <span class="text-j-orange">Juan</span></h2>
            <div class="grid md:grid-cols-2 gap-4 items-start justify-start">
                <div
                    class="flex flex-col gap-2 items-start justify-start w-full"
                >
                    <SkillLabel text="iOS Development" />
                    <SkillLabel text="Full Stack Development" />
                    <SkillLabel text="Project Management" />
                    <SkillLabel text="Scrum Principles" />
                    <SkillLabel text="Clear Communication" />
                    <SkillLabel text="Leadership" />
                </div>
                <div class="flex flex-col gap-2">
                    <AboutMeJuanText />
                </div>
                <div class="flex flex-col items-center justify-center md:order-3">
                    <Image
                        src="/images/apps.png"
                        width={800}
                        aspectRatio={1.56}
                        alt="Finnish Passphrases app running on a Mac and HKI Bike Buddy running on an iPhone"
                        format="png"
                        class="object-cover"
                    />
                </div>
                <div class="flex flex-col gap-2">
                    <AboutMeAppsText />
                </div>
            </div>
        </div>
    </div>
</div>
