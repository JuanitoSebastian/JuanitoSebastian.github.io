---
import type { InferEntrySchema } from 'astro:content';
import BlogPostHead from './BlogPostHead.astro';
import Breadcrumbs from '../Breadcrumbs.astro';

type Props = {
  post: {
    id: string;
    data: InferEntrySchema<'blog'>;
  };
};

const { post } = Astro.props;
const {
  id: currentPostId,
  data: { title, date, keywords, mainImage, mainImageAlt },
} = post;

const crumbs = [
  { name: 'Blog', url: '/blog' },
  { name: title, url: `/blog/${currentPostId}` },
];
---

<style>
  .blog-post-article {
    backdrop-filter: blur(1px);
    max-width: var(--main-width);
    padding: var(--default-spacing) 0 var(--xl-spacing);
    margin: 0 auto var(--xl-spacing);
    background: var(--section-background-gradient);
  }
</style>

<style is:global>
  .blog-post-article {
    .blog-post-article-embed {
      max-width: 100%;

      &.video > iframe {
        width: 100%;
        height: 100%;
        aspect-ratio: 16 / 9;
      }
    }
  }
</style>

<article class="blog-post-article">
  <Breadcrumbs crumbs={crumbs} />
  <BlogPostHead
    title={title}
    date={date}
    keywords={keywords}
    mainImage={mainImage}
    mainImageAlt={mainImageAlt}
  />
  <slot />
</article>
