---
export interface Props {
  name: string;
  isH2?: boolean;
  class?: string;
}

const { name, isH2, class: classNameProp, ...rest } = Astro.props;
const className = classNameProp
  ? `section-name-tag ${classNameProp}`
  : 'section-name-tag';
---

<style>
  .section-name-tag {
    width: fit-content;
    margin-right: auto;
    margin-left: auto;
    background-color: var(--light-gray-color);
    padding: var(--smaller-spacing);
    border-radius: var(--border-radius);
    box-shadow: 0px 0px 4px 0px var(--bg-color);
    border: 2px solid var(--gray-color);
  }

  .section-name-tag-text {
    font-family: var(--roboto-mono);
    font-size: 14px;
    font-weight: 600;
    color: var(--secondary-text-color);
    letter-spacing: 1px;
    text-transform: uppercase;
    line-height: 1;
    margin: 0;
  }
</style>
<div class={className} {...rest}>
  {
    isH2 ? (
      <h2 class="section-name-tag-text">{name}</h2>
    ) : (
      <div class="section-name-tag-text">{name}</div>
    )
  }
</div>
