---
import Html from '../layouts/Html.astro';
import Layout from '../layouts/Layout.astro';
import Hero from '../components/home/Hero.astro';
import AboutMe from '../components/home/AboutMe.astro';
import SectionNameTag from '../components/SectionNameTag.astro';
import WorkExperience from '../components/home/WorkExperience/WorkExperience.astro';
import Socials from '../components/home/Socials.astro';

import juanitoImage from '../images/juanito_polaroid.webp';
import junitoOgImage from '../images/juanito_og_image.webp';

const htmlProps = {
  title: 'Juan Sebastian Covarrubias',
  meta: {
    description:
      'Juan is a web developer and a former technical event production pro.',
    keywords: [
      'react',
      'javascript',
      'typescript',
      'software engineer',
      'web developer',
      'front-end developer',
      'full-stack developer',
    ],
    imageUrl: junitoOgImage.src,
  },
  preload: [juanitoImage.src],
};
---

<Html {...htmlProps}>
  <Layout>
    <Hero />
    <SectionNameTag name="About me" />
    <AboutMe />
    <SectionNameTag name="Work experience" isH2={true} />
    <WorkExperience />
    <SectionNameTag name="Socials" isH2={true} />
    <Socials />
  </Layout>
</Html>
