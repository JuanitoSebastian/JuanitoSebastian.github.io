---
import Html from '../layouts/Html.astro';
import Layout from '../layouts/Layout.astro';
import Hero from '../components/home/Hero.astro';
import AboutMe from '../components/home/AboutMe.astro';
import SectionNameTag from '../components/SectionNameTag.astro';
import WorkExperience from '../components/home/WorkExperience/WorkExperience.astro';

const htmlProps = {
  title: 'Juan Sebastian Covarrubias',
  meta: {
    description:
      'Juan is a software engineer and web developer based in Helsinki.',
    keywords:
      'react, javascript, typescript, software engineer, web developer, front-end developer, full-stack developer',
  },
};
---

<Html {...htmlProps}>
  <Layout>
    <Hero />
    <SectionNameTag name="About me" />
    <AboutMe />
    <SectionNameTag name="Work experience" />
    <WorkExperience />
  </Layout>
</Html>
